<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.affinitymapper.affinitymapper.activities.MainActivity">

    <TextView
        android:id="@+id/sampleText"
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/updateLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Update Location"
        android:background="#9DDEFF"
        android:paddingRight="40dp"
        android:paddingLeft="40dp"
        android:layout_marginTop="75dp"
        android:onClick="updateLocationClicked"
        />

    <Button
        android:id="@+id/sampleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Get Users Near By"
        android:layout_centerVertical="true"
        android:background="#9DDEFF"
        android:paddingRight="40dp"
        android:paddingLeft="40dp"
        android:layout_marginTop="75dp"
        android:onClick="sampleButtonClicked"
        />
    <Button
        android:id="@+id/signOutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Back"
        android:layout_below="@id/sampleButton"
        android:layout_centerVertical="true"
        android:background="#9DDEFF"
        android:paddingRight="40dp"
        android:paddingLeft="40dp"
        android:layout_marginTop="75dp"
        android:onClick="signOutButtonClicked"
        />

</RelativeLayout>
